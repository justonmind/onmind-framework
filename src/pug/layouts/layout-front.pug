include ../_core/core
doctype html
html(lang='ru' dir='ltr')
	head
		include layout-parts/meta
		+nl()
		
		// title starts
		block title
		// title ends
		+nl()

		include layout-parts/favicon
		+nl()

		include layout-parts/styles
	+nl()
	+nl()
	
		

	body.page#page
		
		
		// main header starts
		header.header#header
			block header
		// main header ends
		+nl()
	
		// main content starts
		main.main#main
			block main-content
		// main content ends
		+nl()
	
		// main footer starts
		footer.footer#footer
			block footer
		// main footer ends
		+nl()
		
		// button to top starts
		block totop
		// button to top ends
		+nl()
		
		// overlay starts
		block overlay
		// overlay ends
		+nl()
		
		// touch panel starts
		block touch-panel
		// touch panel ends
		+nl()
		
		// modal popups start
		block modals
		// modal popups end
		+nl()

		include layout-parts/scripts
		
		block mapscripts
