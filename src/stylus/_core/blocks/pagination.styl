.pagination
	display -webkit-flex
	display -ms-flex
	display flex
	list-style-type none
	padding 0
	margin 0

	&__item
		border 1px solid black
		display block
		margin-right 9px
		margin-bottom 10px

		&:last-child
			margin-right 0

		&_active
			.pagination__link
				color #fff
				background-color #000

		&_step
			.pagination__link
				font-size 0
				&_prev
				&_next
					width 32px
					height 32px
					&:before
						content '<'
				&_next
					&:before
						content '>'

		&_stage
			.pagination__link
				font-size 0
				&_prev
				&_next
					width 38px
					height 32px
					&:before
						content '<<'
				&_next
					&:before
						content '>>'

	&__link
		display flex
		flex-direction column
		align-items center
		justify-content center
		flex-shrink 0
		text-decoration none
		font sans-serif 16px 1 black
		padding 9px 11px 7px 11px
		background-color transparent


		&_prev
		&_next
			position relative

			&:before
				content ''
				display block
				absolute top 53% left 50%
				transform translate(-50%, -50%)
				font sans-serif 16px 1 black

			&:hover
				&:before
					color #fff
					background-color #000


		&:hover
			color #fff
			background-color #000
