.tabs
	width 100%

	&__tabs-box
		display -webkit-flex
		display -ms-flex
		display flex
		list-style-type none
		margin 0
		padding 0

	&__tab
		padding 5px 10px
		border 1px solid  #aaa
		cursor: pointer
		display -webkit-flex
		display -ms-flex
		display flex
		align-items center
		justify-content center
		text-align center
		transition .2s
		user-select none

		&_active
			background-color #0ff

	&__content-box
		width 100%
		border 1px solid #aaa
		padding 20px

	&__content
		display none
