.volatile-select
	position relative
	cursor pointer
	padding-right 13px
	&:after
		content '>'
		font sans-serif 7px 1 black
		position absolute
		right 0
		top 50%
		transform translateY(-50%) rotateZ(-180deg)
		transition .2s

	&_hovered
		&:after
			transform translateY(-50%) rotateZ(0)


	&__label
		cursor pointer
		text-decoration none
		display block
		font sans-serif 21px (26/21) black
		padding 0
		margin 0




	&__options-box
		display none
		padding 5px 10px
		width 200px
		border 1px solid green
		background rgba(255,255,255,.85)
		position absolute
		right 0
		top auto
		// margin-top 2px
		z-index 3

		&_short
			width 45px

	&__options-container
		width 100%
		display flex
		justify-content center
