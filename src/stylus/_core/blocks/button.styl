.button
	display flex
	align-items center
	justify-content center
	padding 10px 15px
	height 40px
	font sans-serif 16px 1 blue
	text-decoration none
	background transparent
	border 2px solid blue
	transition .3s
	cursor pointer

	&:hover
		background blue
		color white

	&:focus
	&:active
		outline none
